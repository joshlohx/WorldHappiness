{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Bubble Chart of Happiness Score vs. GDP per Capita",
    "width": "container",
    "config": {
        "background": "#F5F5F5"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/jloh56/Visualisation2/main/data/WHR_2023.csv"
    },
    "params": [
      {
        "name": "Population_Above",
        "value": 0,
        "bind": {
          "input": "range",
          "min": 0,
          "max": 100000000,
          "step": 1000000,
          "name": "Minimum Population: "
        }
      },
      
      {
        "name": "Continent_selection",
        "bind": {
          "input": "select",
          "options": [
            null,
            "Africa",
            "Asia",
            "Europe",
            "North America",
            "Oceania",
            "South America"
          ],
          "labels": [
            "Show All",
            "Africa",
            "Asia",
            "Europe",
            "North America",
            "Oceania",
            "South America"
          ],
          "name": "Continent Selection: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.gdp_per_capita > 0"},
      {"filter": "Continent_selection == null || datum.continent == Continent_selection"
      },
      {"filter": "datum.population > Population_Above"}
    ],
    "encoding": {
      "x": {
        "field": "gdp_per_capita",
        "type": "quantitative",
        "title": "GDP per Capita",
        "scale": {"domain": [0.3, 2.4]}
      },
      "y": {
        "field": "happiness_score",
        "type": "quantitative",
        "title": "Happiness Score",
        "scale": {"domain": [1, 8.5]}
      }
    },
    "layer": [
      {
        "mark": "circle",
        "encoding": {
          "size": {
            "field": "population",
            "title": "Population",
            "type": "quantitative",
            "scale": {
              "type": "threshold",
              "domain": [1000000, 10000000, 50000000, 100000000, 500000000],
              "range": [10, 50, 150, 200, 300, 400]
            },
            "legend": {"format": ".1s"}
          },
          "color": {
            "field": "continent",
            "title": "Continent",
            "type": "nominal",
            "scale": {
              "domain": [
                "Africa",
                "Asia",
                "Europe",
                "North America",
                "Oceania",
                "South America"
              ],
              "range": [
                "#FFF442", "#FFA142", "#FF3E03", "#FF4281", "#7A6BFF", "#D442FF"
              ]
            }
          },
          "opacity": {"value": 0.6},
          "tooltip": [
            {"field": "country", "type": "nominal", "title": "Country"},
            {"field": "continent", "type": "nominal", "title": "Continent"},
            {"field": "gdp_per_capita", "type": "quantitative", "title": "GDP per Capita"},
            {"field": "happiness_score", "type": "quantitative", "title": "Happiness Score","format": ".2f"},
            {"field": "population", "type": "quantitative", "format": ".1s"}
          ]
        }
      },
      {
        "mark": {
          "type": "text",
          "align": "right",
          "baseline": "middle",
          "dx": -12,
          "dy": 10,
          "fontSize": 11.5,
          "fontStyle": "italic"
        },
        "encoding": {
          "text": {"field": "country", "type": "nominal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "datum['country'] == 'Afghanistan' || datum['country'] == 'Finland' || datum['country'] == 'Australia' || datum['country'] == 'Lebanon' || datum['country'] == 'India' || datum['country'] == 'Yemen' || datum['country'] == 'Turkey'",
              "value": 1
            },
            "value": 0
          },
          "tooltip": [
            {"field": "country", "type": "nominal", "title": "Country"},
            {"field": "continent", "type": "nominal", "title": "Continent"},
            {"field": "gdp_per_capita", "type": "quantitative", "title": "GDP per Capita"},
            {"field": "happiness_score", "type": "quantitative", "title": "Happiness Score","format": ".2f"},
            {"field": "population", "type": "quantitative", "format": ".1s"}
          ]
        }
      }
    ]
  }
