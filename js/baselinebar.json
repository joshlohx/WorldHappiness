{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Top 10 Happiest Countries",
  "config": {
    "background": "#F5F5F5"
  },
  "height": 181,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jloh56/Visualisation2/main/data/WHR_2023.csv"
      },
      "layer": [
        {
          "mark": {
            "type": "bar",
            "clip": true
          },
          "encoding": {
            "x": {
              "field": "country",
              "type": "nominal",
              "title": "Countries",
              "scale": {
                "domain": ["Finland", "Denmark", "Iceland", "Israel", "Netherlands", "Sweden", "Norway", "Switzerland", "Luxembourg", "New Zealand"]
              }
            },
            "y": {
              "field": "happiness_score",
              "type": "quantitative",
              "scale": {
                "domain": [7, 8]
              }
            },
            "color": {
              "value": "#D3D3D3"
            },
            "tooltip": [
              {
                "field": "country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "happiness_score",
                "type": "quantitative",
                "title": "Happiness Score",
                "format": ".2f"
              }
            ]
          }
        },
        {
          "mark": "bar",
          "transform": [
            {
              "filter": "datum.happiness_score >= 7.4"
            },
            {
              "calculate": "7.4",
              "as": "baseline"
            }
          ],
          "encoding": {
            "x": {
              "field": "country",
              "type": "nominal",
              "scale": {
                "domain": ["Finland", "Denmark", "Iceland", "Israel", "Netherlands", "Sweden", "Norway", "Switzerland", "Luxembourg", "New Zealand"]
              }
            },
            "y": {
              "field": "baseline",
              "type": "quantitative",
              "title": "Happiness Score",
              "scale": {
                "domain": [7, 8]
              }
            },
            "y2": {
              "field": "happiness_score"
            },
            "color": {
              "value": "#233014"
            },
            "tooltip": [
              {
                "field": "country",
                "type": "nominal",
                "title": "Country"
              },
              {
                "field": "happiness_score",
                "type": "quantitative",
                "title": "Happiness Score",
                "format": ".2f"
              }
            ]
          }
        }
      ]
    },
    {
      "data": {
        "values": [{}]
      },
      "encoding": {
        "y": {
          "datum": 7.4
        }
      },
      "layer": [
        {
          "mark": "rule"
        },
        {
          "mark": {
            "type": "text",
            "align": "right",
            "baseline": "bottom",
            "dx": -2,
            "dy": -2,
            "x": "width",
            "text": "Cut-off for Top 4 = 7.4"
          }
        }
      ]
    },
    {
      "data": {
        "values": [{}]
      },
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "text": ["‚Üê Finland ranks the highest"],
        "dx": -75,
        "dy": -35,
        "color": "#4CAF50",
        "fontStyle": "bold"
      }
    }
  ]
}
